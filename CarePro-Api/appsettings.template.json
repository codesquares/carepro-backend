{
  "ConnectionStrings": {
    "MongoDbConnection": "mongodb://localhost:27017"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "AllowedFrontendOrigins": [
    "localhost:5173",
    "localhost:5174",
    "onrender.com",
    "oncarepro.com",
    "awsapprunner.com",
    "amazonaws.com"
  ],

  "JWT": {
    "Key": "YOUR_JWT_SECRET_KEY_HERE",
    "Issuer": "SecureApi",
    "Audience": "SecureApiUser",
    "DurationInHours": 5
  },

  "JwtSettings": {
    "Secret": "YOUR_JWT_SETTINGS_SECRET_HERE",
    "Issuer": "CareProAPI",
    "Audience": "CareProUsers",
    "ExpiresInMinutes": 30
  },

  "Flutterwave": {
    "PublicKey": "YOUR_FLUTTERWAVE_PUBLIC_KEY",
    "SecretKey": "YOUR_FLUTTERWAVE_SECRET_KEY",
    "EncryptionKey": "YOUR_FLUTTERWAVE_ENCRYPTION_KEY"
  },

  "MailSettings": {
    "FromEmail": "your-email@domain.com",
    "FromName": "Care-Pro",
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "AppPassword": "YOUR_EMAIL_APP_PASSWORD",
    "EnableSsl": true
  },

  "CloudinarySettings": {
    "CloudName": "YOUR_CLOUDINARY_CLOUD_NAME",
    "ApiKey": "YOUR_CLOUDINARY_API_KEY",
    "ApiSecret": "YOUR_CLOUDINARY_API_SECRET"
  },

  "LLMSettings": {
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY",
      "Model": "gpt-3.5-turbo",
      "MaxTokens": 2000,
      "Temperature": 0.7
    }
  },

  "GoogleMaps": {
    "ApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
  },

  "Dojah": {
    "AppId": "YOUR_DOJAH_APP_ID",
    "ApiKey": "YOUR_DOJAH_API_KEY", 
    "WebhookSecret": "YOUR_DOJAH_WEBHOOK_SECRET",
    "SignatureVerificationEnabled": true
  },

  "Webhook": {
    "RateLimitWindowMs": 300000,
    "RateLimitMaxRequests": 100,
    "MaxPayloadSize": 10485760,
    "DataRetentionHours": 12
  },

  "ContractSettings": {
    "DefaultCancellationHours": 24,
    "MaxRevisionAttempts": 3,
    "DefaultContractDurationDays": 30
  },

  "NotificationSettings": {
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "BatchSize": 100
  },

  "ApiSettings": {
    "BaseUrl": "https://localhost:5001"
  }
}