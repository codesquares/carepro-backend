# Environment Variables Template for CarePro Backend
# Copy this file to .env and fill in your actual values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_CONNECTION_STRING=mongodb://admin:password123@localhost:27017/carepro?authSource=admin
REDIS_CONNECTION_STRING=localhost:6379

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-change-this-in-production
JWT_ISSUER=CarePro
JWT_AUDIENCE=CarePro.Users
JWT_EXPIRATION_MINUTES=60

# ==============================================
# EXTERNAL API KEYS
# ==============================================
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=noreply@carepro.com
EMAIL_PASSWORD=your-email-app-password-here

# ==============================================
# DOCKER REGISTRY (for production deployment)
# ==============================================
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-access-token

# ==============================================
# AWS CONFIGURATION (for AWS deployment)
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
API_VERSION=v1

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=Information
ENABLE_STRUCTURED_LOGGING=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_TIMEOUT_SECONDS=30
ENABLE_DETAILED_HEALTH_CHECKS=true